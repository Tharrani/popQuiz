<div class="container">
    <br />
    <form action="/saveQuizform" method="POST">
    <input type="hidden" id="id" name="id" value="{{editquiz.id}}"/>
        <div class="form-group">
            <label for="question">Question</label>
            <input type="text" class="form-control" id="question" name="question" value="{{editquiz.question}}"" aria-describedby="questionHelp" placeholder="{{quiz.question}}">
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Answers</label>
        </div>
        <div class="form-group">
            <label for="answer1">A.</label>
            <input type="text" class="form-control" id="answer1" name="answer1" value="{{editquiz.answer1}}">
        </div>
       <div class="form-group">
            <label for="answer2">B.</label>
            <input type="text" class="form-control" id="answer2" name="answer2" value="{{editquiz.answer2}}">
        </div>
        <div class="form-group">
            <label for="answer3">C.</label>
            <input type="text" class="form-control" id="answer3" name="answer3" value="{{editquiz.answer3}}">
        </div>
        <div class="form-group">
            <label for="answer4">D.</label>
            <input type="text" class="form-control" id="answer4" name="answer4" value="{{editquiz.answer4}}">
        </div>
        <div class="form-group">
            <label for="correctAnswer">Correct Answer</label>
            <input type="text" class="form-control" id="correctAnswer" name="correctAnswer" value="{{editquiz.correctAnswer}}">
        </div>
        <button type="submit" class="btn btn-primary">Save</button> 
        &nbsp; &nbsp;  
        <button type="reset" class="btn btn-warning">Reset</button>

 
    </form>
</div>